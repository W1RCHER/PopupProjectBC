{
  "manifest_version": 3,
  "name": "JSniffer",
  "description": "Моё расширение анализирует потенциально опасные JS-скрипты на страницах.",
  "version": "1.0.3",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
  {
    "resources": ["ml_weights.json"],
    "matches": ["<all_urls>"]
  }
],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "author": "Комаров Святослав Михайлович. Россия, Новосибирская область, г. Новосибирск",
  "minimum_chrome_version": "109"
}
